<Page x:Class="Lottery.View.User.RecoverPasswordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lottery.View"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:Lottery.Properties.Langs"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F0F0F0"
      Title="RecoverPasswordView">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">

            <TextBlock Text="{x:Static language:Lang.RecoverPasswordLabelTitle}"
                FontSize="28"
                FontWeight="Bold"
                TextAlignment="Center"
                Margin="0 0 0 60"/>
            
            <StackPanel x:Name="EmailPanel" HorizontalAlignment="Center" Width="440" Visibility="Visible">
                <TextBlock
                   FontSize="16"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0 0 0 20"><Run 
                   Text="{x:Static language:Lang.GlobalLabelDetailsToContinue}"/>
                </TextBlock>

                <Label Content="{x:Static language:Lang.GlobalLabelEmail}" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbEmail" Style="{StaticResource StyledTextBox}"/>

                <TextBlock Text="{x:Static language:Lang.RecoverPasswordLabelDescription}"
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,8,0,30"/>

                <Button Content="{x:Static language:Lang.RecoverPasswordButtonRecoverPassword}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Click="NextFromEmail_Click"/>
            </StackPanel>

            <StackPanel x:Name="CodePanel" HorizontalAlignment="Center" Width="440" Visibility="Collapsed">
                <TextBlock
                   FontSize="16"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0 0 0 20"><Run 
                   Text="{x:Static language:Lang.GlobalLabelVerificationCode}"/>
                </TextBlock>

                <Label Content="{x:Static language:Lang.GlobalButtonVerificationCode}" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbCode" Style="{StaticResource StyledTextBox}"/>

                <Button Content="{x:Static language:Lang.GlobalButtonVerifyCode}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Click="NextFromCode_Click"/>
            </StackPanel>

            <StackPanel x:Name="NewPasswordPanel" HorizontalAlignment="Center" Width="440" Visibility="Collapsed">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    Margin="0 0 0 20"><Run 
                    Text="{x:Static language:Lang.RecoverPasswordLabelNewPassword}"/>
                </TextBlock>

                <Label Content="{x:Static language:Lang.GlobalLabelNewPassword}" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbNewPassword" Style="{StaticResource StyledTextBox}"/>

                <Label Content="{x:Static language:Lang.GlobalLabelConfirmPassword}" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbRepeatPassword" Style="{StaticResource StyledTextBox}"/>

                <Button Content="{x:Static language:Lang.RecoverPasswordButtonConfirm}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Click="Finish_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
