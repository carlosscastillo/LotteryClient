<Page x:Class="Lottery.View.LeaderboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Lottery.View"
      xmlns:language="clr-namespace:Lottery.Properties.Langs"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F0F0F0">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="700">

            <TextBlock Text="{x:Static language:Lang.LeaderboardLabelTitle}"
                       FontSize="28" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0 0 0 40"/>
            
            <Grid Width="500" Margin="0 0 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static language:Lang.LeaderboardRankLabel}"
                           FontWeight="Bold" FontSize="16" Grid.Column="0"/>
                <TextBlock Text="{x:Static language:Lang.LeaderboardScoreLabel}"
                           FontWeight="Bold" FontSize="16" Grid.Column="1" TextAlignment="Right"/>
            </Grid>
            
            <ItemsControl ItemsSource="{Binding TopPlayers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="500" Margin="0 5 0 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <TextBlock Text="{Binding Position}" Width="30" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding Name}" 
                                           VerticalAlignment="Center"
                                           Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Score}" 
                                       Grid.Column="1" 
                                       TextAlignment="Right" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="{x:Static language:Lang.GlobalButtonBack}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0 50 0 0"/>
        </StackPanel>
    </Grid>
</Page>
