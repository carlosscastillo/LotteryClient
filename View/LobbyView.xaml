<Window x:Class="Lottery.View.LobbyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View"
        xmlns:vm="clr-namespace:Lottery.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:LobbyViewModel, IsDesignTimeCreatable=False}"
        Title="Lobby del Juego"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        WindowState="Maximized">

    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="8" Padding="15">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="Código:" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox Text="{Binding LobbyCode}" IsReadOnly="True" FontWeight="Bold" FontSize="16" 
                             VerticalAlignment="Center" TextAlignment="Center" Width="100"
                             Background="#AAFFFFFF" BorderThickness="0" Padding="5"/>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="Jugadores" FontWeight="Bold" FontSize="18" Margin="0,0,0,10">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowingFriendsList}" Value="True">
                                    <Setter Property="Text" Value="Invitar Amigos"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowingFriendsList}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Players}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" BorderThickness="0,0,0,1" BorderBrush="#55FFFFFF">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Nickname}" VerticalAlignment="Center" FontSize="14"/>

                                            <Button Grid.Column="1" Content="X" ToolTip="Expulsar" FontSize="10" Padding="3,0" Foreground="Red" FontWeight="Bold"
                                                    Command="{Binding DataContext.KickPlayerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding UserId}"
                                                    Visibility="{Binding DataKey, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    IsEnabled="{Binding IsHost, Converter={StaticResource InverseBooleanConverter}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHost}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        Visibility="{Binding IsShowingFriendsList, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FriendsList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" BorderThickness="0,0,0,1" BorderBrush="#55FFFFFF">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Nickname}" VerticalAlignment="Center" FontSize="14"/>

                                            <Button Grid.Column="1" Content="Invitar"
                                                Command="{Binding DataContext.InviteFriendToLobbyCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding UserId}" Style="{StaticResource SecondaryButton}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>


                <Button Grid.Row="3" Command="{Binding ToggleShowFriendsCommand}" Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Setter Property="Content" Value="Invitar Amigo..."/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShowingFriendsList}" Value="True">
                                    <Setter Property="Content" Value="Ver Jugadores"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>

        <Border Grid.Column="1" Margin="15,0,0,0" Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,10" Background="#22FFFFFF">
                    <ListBox ItemsSource="{Binding ChatHistory}" BorderThickness="0" Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Auto" Foreground="{StaticResource TextBrush}"/>
                </Border>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" 
                             Height="38" Background="#AAFFFFFF" BorderThickness="0" Padding="5">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendChatCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" Content="Enviar" Command="{Binding SendChatCommand}" Margin="5,0,0,0" Padding="10,5" Style="{StaticResource PrimaryButton}"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Modo de Juego:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>
                        <ComboBox ItemsSource="{Binding AvailableGameModes}"
                            SelectedItem="{Binding SelectedGameMode}"
                            IsEnabled="{Binding IsHost}"
                            MinWidth="180" 
                            Height="40"
                            VerticalContentAlignment="Center"
                            FontSize="15">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="Black" Padding="4"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="#FFDDDDDD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>

                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="2" Content="Salir del Lobby" Command="{Binding LeaveLobbyCommand}" Margin="10,0" Style="{StaticResource SecondaryButton}"/>

                    <Button Grid.Column="3" Content="Empezar Partida" FontWeight="Bold" Padding="15,5"
                            Command="{Binding StartGameCommand}"
                            Visibility="{Binding IsHost, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource PrimaryButton}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>