<Window x:Class="Lottery.View.MainMenu.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View.MainMenu"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="MainMenu" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="SideIconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SideIconTextStyle" TargetType="TextBlock" BasedOn="{StaticResource IconStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#AA000000" Padding="60" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.4" BlurRadius="20"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="{x:Static language:Lang.GlobalButtonCreateLobby}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        MinWidth="320" MinHeight="65" FontSize="24" Margin="0,0,0,20"
                        Command="{Binding CreateLobbyCommand}"/>
                <Button Content="{x:Static language:Lang.GlobalButtonJoinLobby}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        MinWidth="320" MinHeight="65" FontSize="24"
                        Command="{Binding JoinLobbyCommand}"/>
            </StackPanel>
        </Border>

        <Border Background="#88000000" Padding="20" CornerRadius="15" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Style="{StaticResource SideIconButtonStyle}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE713;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Static language:Lang.MainMenuButtonSettings}" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SideIconButtonStyle}" 
                        Command="{Binding ShowFriendsViewCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE716;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Static language:Lang.MainMenuButtonFriends}" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SideIconButtonStyle}" 
                    Command="{Binding ProfileCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE77B;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Static language:Lang.MainMenuButtonProfile}" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                Click="CloseButton_Click"/>

    </Grid>
</Window>
