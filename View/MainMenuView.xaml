<Window x:Class="Lottery.View.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="MainMenu" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SideIconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,25,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SideIconTextStyle" TargetType="TextBlock" BasedOn="{StaticResource IconStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border BorderBrush="#55FFFFFF" BorderThickness="1" Background="#AA000000" CornerRadius="12" Padding="60">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>

            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40,0,0,0">
                        <Button Content="{x:Static language:Lang.CreateLobbyLabelTitle}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="300" MinHeight="60" FontSize="22"
                                Margin="0,0,0,20"/>
                        <Button Content="{x:Static language:Lang.JoinLobbyLabelTittle}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="300" MinHeight="60" FontSize="22"
                                Margin="0,0,0,0"/>
                    </StackPanel>


                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="40,0,0,0">
                        <Button Style="{StaticResource SideIconButtonStyle}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE713;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static language:Lang.MainMenuButtonSettings}" FontSize="14" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SideIconButtonStyle}" 
                            Command="{Binding ShowFriendsViewCommand}"
                            VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30,40,30,30"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">

                            <StackPanel Orientation="Vertical" Width="70">
                                <TextBlock Text="&#xE716;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static language:Lang.MainMenuButtonFriends}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SideIconButtonStyle}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE77B;" Style="{StaticResource SideIconTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static language:Lang.MainMenuButtonProfile}" FontSize="14" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>