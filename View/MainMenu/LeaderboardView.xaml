<Window x:Class="Lottery.View.MainMenu.LeaderboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        mc:Ignorable="d"
        Title="Leaderboard"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    
    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Margin="10">

        <Button Content="&#xE72B;"
            FontFamily="Segoe MDL2 Assets"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="5,-5,0,0"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
            Foreground="White"
            FontWeight="Bold"
            FontSize="14"
            Command="{Binding GoBackToMenuCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Panel.ZIndex="1"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
                       Text="{x:Static language:Lang.LeaderboardLabelTitle}"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <GroupBox Grid.Row="1"
                      Header="{x:Static language:Lang.LeaderboardLabelTitle}"
                      Margin="0,0,0,20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Margin="10" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Static language:Lang.LeaderboardRankLabel}"
                                   FontWeight="Bold"/>

                        <TextBlock Text="{x:Static language:Lang.LeaderboardPlayerLabel}"
                                   Grid.Column="1"
                                   FontWeight="Bold"
                                   Margin="20,0,0,0"/>

                        <TextBlock Text="{x:Static language:Lang.LeaderboardScoreLabel}"
                                   Grid.Column="2"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Players}"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" BorderThickness="0,0,0,1">

                                    <Border.Style>
                                        <Style TargetType="Border">

                                            <Setter Property="Background" Value="#1AFFFFFF"/>
                                            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>

                                            <Style.Triggers>

                                                <DataTrigger Binding="{Binding Position}" Value="1">
                                                    <Setter Property="Background" Value="#33FFD700"/>
                                                    <Setter Property="BorderBrush" Value="#99FFD700"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Position}" Value="2">
                                                    <Setter Property="Background" Value="#33C0C0C0"/>
                                                    <Setter Property="BorderBrush" Value="#99C0C0C0"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Position}" Value="3">
                                                    <Setter Property="Background" Value="#33CD7F32"/>
                                                    <Setter Property="BorderBrush" Value="#99CD7F32"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding IsCurrentUser}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF00E5FF"/>
                                                    <Setter Property="BorderThickness" Value="3"/>

                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect
                                                                Color="#FF00E5FF"
                                                                BlurRadius="25"
                                                                ShadowDepth="0"
                                                                Opacity="0.85"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Position}" FontWeight="Bold" Width="40"/>

                                        <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center">

                                            <TextBlock Text="{Binding Nickname}"/>

                                            <TextBlock Text="{x:Static language:Lang.LeaderboardCurrentUserLabel}"
                                                Margin="6,0,0,0"
                                                FontSize="12"
                                                Foreground="#AAFFFFFF"
                                                Visibility="{Binding IsCurrentUser,
                                                Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>


                                        <TextBlock Grid.Column="2"
                                            Text="{Binding Score}"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Right"/>
                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>