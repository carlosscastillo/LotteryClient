<Window x:Class="Lottery.View.InviteFriendsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="InviteFriendsView" Height="400" Width="350"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#DDDDDD" BorderThickness="1" Background="White" CornerRadius="12" Padding="40" MaxWidth="420" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="{x:Static language:Lang.InviteFriendsLabelTitle}" Style="{StaticResource TitleTextStyle}" Margin="0,40,0,30"/>

                <TextBlock Text="{x:Static language:Lang.InviteFriendsLabelCopyInviteCode}" Style="{StaticResource SubtitleTextStyle}" Margin="0,-10,0,20"/>

                <Label Content="{x:Static language:Lang.InviteFriendsButtonInviteCode}" Style="{StaticResource LabelStyle}"/>

                <TextBox x:Name="InvitationCodeTextBox" 
                     Text="0000      " 
                     IsReadOnly="True" 
                     TextAlignment="Center"
                     FontSize="16"
                     FontWeight="SemiBold"/>

                <Button x:Name="CopyButton"
                    Click="CopyButton_Click"
                    Content="{x:Static language:Lang.InviteFriendsButtonCopy}" 
                    Margin="0,30,0,0" 
                    Padding="12" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Foreground="White" 
                    Background="Black" 
                    BorderThickness="0" 
                    Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
