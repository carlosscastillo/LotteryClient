<Window x:Class="Lottery.View.Lobby.JoinLobbyByCodeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View.Lobby"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="JoinLobbyView" 
        Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#55FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="/Images/backgroundRickAndMorty.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Border Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="12" Padding="20">
            <Grid>
                <Button Content="X"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="CloseButton_Click"
                        Panel.ZIndex="1"
                        Cursor="Hand"/>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{x:Static language:Lang.GlobalButtonJoinLobby}" 
                               Style="{StaticResource TitleTextStyle}" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"/>

                    <TextBlock Text="{x:Static language:Lang.JoinLobbyLabelDetails}" 
                               Style="{StaticResource SubtitleTextStyle}" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,5,0,20"/>

                    <Label Content="{x:Static language:Lang.JoinLobbyLabelLobbyCode}" 
                           Style="{StaticResource LabelStyle}" 
                           Foreground="{StaticResource TextBrush}"
                           Target="{Binding ElementName=LobbyCodeTextBox}"/>

                    <Border Background="#33FFFFFF" CornerRadius="4">
                        <TextBox x:Name="LobbyCodeTextBox"
                                 Text="{Binding LobbyCode, UpdateSourceTrigger=PropertyChanged}"
                                 TextAlignment="Center"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="8"
                                 MaxLength="6"/>
                    </Border>

                    <Button x:Name="JoinLobbyButton"
                            Content="{x:Static language:Lang.JoinLobbyButtonJoin}" 
                            Margin="0,30,0,0" 
                            Padding="12" 
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding JoinLobbyCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>