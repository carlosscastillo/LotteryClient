<Window x:Class="Lottery.View.Game.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=False}"
        Title="Partida en curso"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">

    <!-- Fondo -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background2.jpg"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <!-- Columnas principales -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <!-- IZQUIERDA -->
            <ColumnDefinition Width="*"/>
            <!-- CENTRO -->
            <ColumnDefinition Width="420"/>
            <!-- DERECHA -->
        </Grid.ColumnDefinitions>

        <!-- 🔹 IZQUIERDA (rivales + fichas) -->
        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Width="390">

            <!-- Rivales -->
            <!-- (Tu ItemsControl para rivales va aquí, no se necesita cambiar) -->
            <ItemsControl>
                <ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Int32}">
                        <sys:Int32>1</sys:Int32>
                        <sys:Int32>2</sys:Int32>
                        <sys:Int32>3</sys:Int32>
                    </x:Array>
                </ItemsControl.ItemsSource>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5,0,1"
                                    Orientation="Horizontal">
                            <Border Width="114" Height="180"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    Background="Transparent"
                                    Margin="0,0,10,0">
                                <Image Source="pack://application:,,,/Images/tabla.jpg"
                                       Stretch="Uniform"/>
                            </Border>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Jugador"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="16"/>
                                <TextBlock Text="Fichas restantes: 5"
                                           Foreground="#DDDDDD"
                                           FontSize="13"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Imagen de fichas -->
            <Border BorderBrush="Transparent"
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="0,40,0,0"                    
                    Padding="10"
                    HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Images/corcholata.png"
                       Width="280"
                       Height="180"
                       Stretch="Uniform"/>
            </Border>
        </StackPanel>

        <!-- 🔹 CENTRO (tabla principal) -->
        <Grid Grid.Column="1"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Border Background="#AAFFFFFF"
                    CornerRadius="24"
                    Padding="18"
                    BorderBrush="White"
                    BorderThickness="0"
                    Width="500"
                    Height="770"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Images/tabla.jpg"
                       Stretch="Uniform"/>
            </Border>
        </Grid>

        <!-- 🔹 DERECHA (carta + botón ¡Lotería!) -->
        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,60,40,0">
            <Border Background="#AAFFFFFF"
                    CornerRadius="14"
                    Padding="12"
                    BorderBrush="White"
                    BorderThickness="0"
                    Width="260">
                <StackPanel>

                    <!-- 
                      ****************************************************
                      * MODIFICACIÓN 1 AQUÍ                  *
                      * Se bindea el Source a la propiedad del ViewModel *
                      ****************************************************
                    -->
                    <Image Source="{Binding CurrentCardImage}"
                           Width="260"
                           Height="360"
                           Stretch="Uniform"/>

                    <!-- 
                      ****************************************************
                      * MODIFICACIÓN 2 AQUÍ                  *
                      * Se añade un TextBlock para el nombre de la carta *
                      ****************************************************
                    -->
                    <TextBlock Text="{Binding CurrentCardName}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,5"/>

                </StackPanel>
            </Border>

            <Button Content="¡Lotería!"
                    Command="{Binding ClaimLoteriaCommand}"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="260"
                    Height="65"
                    Margin="0,30,0,0"
                    Style="{StaticResource BlueLargeButtonStyle}"/>
        </StackPanel>

        <!-- 🔹 BOTÓN PAUSA (arriba a la derecha, siempre visible) -->
        <Button Content="⏸ Pausa"
                Command="{Binding PauseGameCommand}"
                Width="120"
                Height="45"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Background="#66000000"
                BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,40,0"
                Grid.ColumnSpan="3"/>

        <!-- 🔹 INFERIOR: mensaje de estado -->
        <Grid Grid.ColumnSpan="3"
              VerticalAlignment="Bottom"
              Margin="30,0,30,20">
            <TextBlock Text="{Binding GameStatusMessage}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>