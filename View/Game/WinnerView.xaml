<Window x:Class="Lottery.View.Game.WinnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View.Game"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game" 
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="Winner"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Background>
        <ImageBrush ImageSource="/Images/backgroundRickAndMorty.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource OverlayBackgroundBrush}"
                CornerRadius="8"
                Padding="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="800"
                Height="905"
                Width="810">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock Text="👑"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0"/>
                    <TextBlock Text="{x:Static language:Lang.WinnerLabelTitle}"
                               FontWeight="Bold"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,-10,0,0"/>
                    <TextBlock Text="{Binding WinnerPlayerName}"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,15"/>
                </StackPanel>

                <Border Grid.Row="1"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="10"
                        Padding="10"
                        Background="#22FFFFFF"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                    <Viewbox Stretch="Uniform">
                        <ItemsControl ItemsSource="{Binding WinnerBoard}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="4" Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Image Source="{Binding ImageSource}" Stretch="Fill"/>
                                        <Image Source="{Binding DataContext.TokenImagePath,
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                               Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                               Stretch="Uniform"
                                               Margin="5">
                                            <Image.Effect>
                                                <DropShadowEffect Color="Black"
                                                                  BlurRadius="10"
                                                                  ShadowDepth="4"
                                                                  Opacity="0.6"/>
                                            </Image.Effect>
                                        </Image>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>
                </Border>

                <Border Grid.Row="2"
                        Width="90"
                        Height="90"
                        CornerRadius="45"
                        BorderBrush="{StaticResource TextBrush}"
                        BorderThickness="3"
                        Margin="0,20"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TimerText}"
                               FontWeight="Bold"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <Button Grid.Row="3"
                    Content="{x:Static language:Lang.WinnerButtonFalseWinner}"
                    Command="{Binding FalseLoteriaCommand}"
                    Margin="0,10,0,0"
                    Padding="15,10"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Style="{StaticResource PrimaryButton}"
                    Visibility="{Binding IsCurrentUserWinner, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

            </Grid>
        </Border>
    </Grid>
</Window>
