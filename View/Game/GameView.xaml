<Window x:Class="Lottery.View.Game.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game"
        xmlns:converters="clr-namespace:Lottery.Converters"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=False}"
        Title="Partida en curso"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">

    <Window.Resources>
        <converters:IdToImageConverter x:Key="IdToImageConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background2.jpg"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                Background="Transparent"
                Focusable="False"
                Padding="0">
                <ItemsControl ItemsSource="{Binding OtherPlayers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#66000000"
                                CornerRadius="14"
                                Padding="8"
                                Margin="0,6"
                                HorizontalAlignment="Left">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Viewbox Grid.Column="0" 
                                        Stretch="Uniform"
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Center"
                                        MaxWidth="180">
                                        <Border Background="#AAFFFFFF"
                                            CornerRadius="28"
                                            Padding="10"
                                            Width="620"
                                            Height="620">

                                            <ItemsControl ItemsSource="{Binding BoardCells}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Rows="4" Columns="4"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="4">
                                                            <Image Source="{Binding ImageSource}" Stretch="Fill"/>
                                                            <Image Source="{Binding DataContext.TokenImagePath, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                Stretch="Uniform"
                                                                Margin="4"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </Viewbox>

                                    <StackPanel Grid.Column="1"
                                        Margin="15,0,10,0"
                                        VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            TextWrapping="Wrap"/>
                                        <TextBlock Text="Fichas: 0" Foreground="#DDD" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="1"
                Background="#66000000"
                CornerRadius="14"
                Padding="12"
                HorizontalAlignment="Left"
                Margin="0,10,0,0">
                <Image Source="{Binding TokenPileImagePath}"
                    Width="200"
                    Height="120"
                    Stretch="Uniform"/>
            </Border>
        </Grid>

        <Viewbox Grid.Column="1" Stretch="Uniform">
            <Border Background="#AAFFFFFF"
                    CornerRadius="28"
                    Padding="20"
                    Width="600"
                    Height="850">

                <ItemsControl ItemsSource="{Binding BoardCells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="4" Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6">
                                <Image Source="{Binding ImageSource}"
                                       Stretch="Fill"/>
                                <Image Source="{Binding DataContext.TokenImagePath, RelativeSource={RelativeSource AncestorType=Window}}"
                                       Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Stretch="Uniform"
                                       Margin="8"/>

                                <ToggleButton IsChecked="{Binding IsSelected}"
                                              Opacity="0"
                                              Cursor="Hand"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Viewbox>

        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,60,40,0">
            <Border Background="#AAFFFFFF"
                    CornerRadius="16"
                    Padding="14"
                    Width="300">
                <StackPanel>
                    <Image Source="{Binding CurrentCardImage}"
                           MaxWidth="300"
                           Stretch="Uniform"/>
                    <TextBlock Text="{Binding CurrentCardName}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,12,0,6"/>
                </StackPanel>
            </Border>

            <Button Content="{x:Static language:Lang.LotteryButton}"
                    Style="{StaticResource PrimaryButtonStyle2}"
                    Command="{Binding DeclareLoteriaCommand}"
                    Visibility="{Binding AllCellsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,30,0,0"/>
        </StackPanel>

        <Button Content="{x:Static language:Lang.GlobalMessageBoxTitleExit}"
                Command="{Binding ExitGameCommand}"
                Width="130"
                Height="48"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Background="#66000000"
                BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,40,0"
                Grid.ColumnSpan="3"/>

        <Grid Grid.ColumnSpan="3"
              VerticalAlignment="Bottom"
              Margin="30,0,30,20">
            <TextBlock Text="{Binding GameStatusMessage}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Grid>

        <Border Grid.ColumnSpan="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="#CC000000"
                CornerRadius="20"
                Padding="40,20"
                IsHitTestVisible="False"
                Visibility="{Binding IsStartMessageVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding StartMessageText}"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#FFC107"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>