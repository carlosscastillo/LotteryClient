<Window x:Class="Lottery.View.Game.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game"
        xmlns:converters="clr-namespace:Lottery.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=False}"
        Title="Partida en curso"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">

    <Window.Resources>
        <converters:IdToImageConverter x:Key="IdToImageConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background2.jpg"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="460"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20" Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ItemsControl Grid.Row="0"
                          Grid.RowSpan="3"
                          ItemsSource="{Binding OtherPlayers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#66000000"
                                CornerRadius="14"
                                Padding="8"
                                Margin="0,6"
                                Height="200">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ItemsControl Grid.Column="0"
                                              ItemsSource="{Binding CardIds}"
                                              Width="160"
                                              Height="160">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="4" Columns="4"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Converter={StaticResource IdToImageConverter}}"
                                                   Stretch="UniformToFill"
                                                   Margin="1"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="15"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding TokensLeft, StringFormat='Fichas: {0}'}"
                                               Foreground="#DDDDDD"
                                               FontSize="13"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Grid.Row="3"
                    Background="#66000000"
                    CornerRadius="14"
                    Padding="12"
                    VerticalAlignment="Center">
                <Image Source="{Binding TokenPileImagePath}"
                       Width="320"
                       Height="220"
                       Stretch="Uniform"/>
            </Border>
        </Grid>

        <Grid Grid.Column="1"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Border Background="#AAFFFFFF"
                    CornerRadius="28"
                    Width="620"
                    Height="900"
                    Padding="20">
                <ItemsControl ItemsSource="{Binding BoardCells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="4" Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6">
                                <Image Source="{Binding ImagePath}"
                                       Stretch="Fill"/>
                                <Image Source="{Binding DataContext.TokenImagePath, RelativeSource={RelativeSource AncestorType=Window}}"
                                       Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Stretch="Uniform"
                                       Margin="8"/>
                                <ToggleButton IsChecked="{Binding IsSelected}"
                                              Opacity="0"
                                              Cursor="Hand"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>

        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,60,40,0">
            <Border Background="#AAFFFFFF"
                    CornerRadius="16"
                    Padding="14"
                    Width="300">
                <StackPanel>
                    <Image Source="{Binding CurrentCardImage}"
                           Width="300"
                           Height="420"
                           Stretch="Uniform"/>
                    <TextBlock Text="{Binding CurrentCardName}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,12,0,6"/>
                </StackPanel>
            </Border>

            <Button Content="¡Lotería!"
                    Style="{StaticResource PrimaryButtonStyle2}"
                    Command="{Binding DeclareLoteriaCommand}"
                    Visibility="{Binding AllCellsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,30,0,0"/>
        </StackPanel>

        <Button Content="⏸ Pausa"
                Command="{Binding PauseGameCommand}"
                Width="130"
                Height="48"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Background="#66000000"
                BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,40,0"
                Grid.ColumnSpan="3"/>

        <Grid Grid.ColumnSpan="3"
              VerticalAlignment="Bottom"
              Margin="30,0,30,20">
            <TextBlock Text="{Binding GameStatusMessage}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Grid>

        <Border Grid.ColumnSpan="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="#CC000000"
                CornerRadius="20"
                Padding="40,20"
                IsHitTestVisible="False"
                Visibility="{Binding IsStartMessageVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding StartMessageText}"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#FFC107"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>