<Window x:Class="Lottery.View.Game.WinnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View.Game"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game" 
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="Ganador"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        AllowsTransparency="True" WindowStyle="None">

    <Window.Background>
        <ImageBrush ImageSource="/Images/FondoRickYMorty.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Grid>

        <Border Background="{StaticResource OverlayBackgroundBrush}" 
                CornerRadius="8" 
                Padding="25"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="800" Height="905" Width="810">

            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <TextBlock Text="👑" FontSize="48" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                    <TextBlock Text="{x:Static language:Lang.WinnerLabelTitle}" FontWeight="Bold" FontSize="48" HorizontalAlignment="Center" Margin="0,-10,0,0"/>
                </StackPanel>

                <Border BorderThickness="1" CornerRadius="4" Margin="10">
                    <Image Source="/Images/CartaDeLotería.png" 
                           Stretch="Uniform" 
                           MaxHeight="450"/>
                </Border>

                <Border Width="90" Height="90" CornerRadius="45" 
                        BorderBrush="{StaticResource TextBrush}" 
                        BorderThickness="3" 
                        Margin="0,20,0,20"
                        HorizontalAlignment="Center">
                    <TextBlock Text="00:10" 
                               FontWeight="Bold" 
                               FontSize="22" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <Button Content="{x:Static language:Lang.WinnerButtonFalseWinner}" 
                        Margin="0,10,0,0"
                        Padding="15,10"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Style="{StaticResource PrimaryButton}"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>