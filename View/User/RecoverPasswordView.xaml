<Window x:Class="Lottery.View.User.RecoverPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        xmlns:vm="clr-namespace:Lottery.ViewModel.User"
        mc:Ignorable="d"
        Title="Recover Password"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="&#xE72B;" 
                FontFamily="Segoe MDL2 Assets" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="15" 
                Foreground="White" 
                FontSize="18" 
                FontWeight="Bold" 
                Cursor="Hand"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Click="BackButton_Click"/>

        <Border Visibility="{Binding IsEmailStepVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#AA000000" BorderBrush="#55FFFFFF" BorderThickness="1"
                CornerRadius="12" Padding="35,40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="400" MinHeight="350">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.RecoverPasswordLabelTitle}" Style="{StaticResource TitleTextStyle}" Foreground="White" TextAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.GlobalLabelDetailsToContinue}" Style="{StaticResource SubtitleTextStyle}" Foreground="#DDDDDD" TextAlignment="Center" Margin="0,10,0,20"/>

                <Label Content="{x:Static language:Lang.GlobalLabelEmail}" Style="{StaticResource LabelStyle}" Foreground="White"/>
                <Grid Margin="0,0,0,10">
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="35,0,10,0" VerticalContentAlignment="Center" Height="40" FontSize="14"/>
                    <TextBlock Text="&#xE715;" Style="{StaticResource IconStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" IsHitTestVisible="False"/>
                </Grid>

                <Button Content="{x:Static language:Lang.RecoverPasswordButtonRecoverPassword}" Command="{Binding SendCodeCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Center" Width="180" Height="40" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <Border Visibility="{Binding IsCodeStepVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#AA000000" BorderBrush="#55FFFFFF" BorderThickness="1"
                CornerRadius="12" Padding="35,40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="400" MinHeight="350">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.GlobalLabelVerificationCode}" Style="{StaticResource SubtitleTextStyle}" Foreground="White" FontSize="22" FontWeight="Bold" TextAlignment="Center"/>

                <TextBlock Text="{Binding Email}" Foreground="#BBBBBB" TextAlignment="Center" FontSize="13" Margin="0,5,0,20" TextTrimming="CharacterEllipsis"/>

                <Label Content="{x:Static language:Lang.GlobalButtonVerificationCode}" Style="{StaticResource LabelStyle}" Foreground="White"/>
                <Grid Margin="0,0,0,10">
                    <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}" 
                        Padding="35,0,35,0" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Center"
                        TextAlignment="Center"
                        Height="40" 
                        FontSize="18" 
                        FontWeight="Bold"
                        CharacterCasing="Upper"
                        MaxLength="6"/>
                    <TextBlock Text="&#xE72E;" 
                        Style="{StaticResource IconStyle}" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0" 
                        IsHitTestVisible="False"/>
                </Grid>

                <Button Content="{x:Static language:Lang.GlobalButtonVerifyCode}" Command="{Binding VerifyCodeCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Center" Margin="0,30,0,0" Width="180" Height="40"/>
                
                <Button x:Name="BackButton"
                    Command="{Binding BackCommand}"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72B;" Style="{StaticResource BackIconStyle}" Foreground="#BBBBBB"/>
                        <TextBlock Text="{x:Static language:Lang.GlobalButtonBack}" Foreground="#BBBBBB" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Border Visibility="{Binding IsNewPasswordStepVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#AA000000" BorderBrush="#55FFFFFF" BorderThickness="1"
                CornerRadius="12" Padding="35,40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="400" MinHeight="400">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.RecoverPasswordLabelNewPassword}" Style="{StaticResource SubtitleTextStyle}" Foreground="#DDDDDD" TextAlignment="Center" Margin="0,0,0,20"/>

                <Label Content="{x:Static language:Lang.GlobalLabelNewPassword}" Style="{StaticResource LabelStyle}" Foreground="White"/>
                <Grid Margin="0,0,0,10">
                    <PasswordBox x:Name="NewPasswordBox"
                                 PasswordChanged="NewPasswordBox_PasswordChanged"
                                 Visibility="{Binding IsNewPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                 Padding="35,0,40,0" VerticalContentAlignment="Center" Height="40" FontSize="14"/>

                    <TextBox Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsNewPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                             Padding="35,0,40,0" VerticalContentAlignment="Center" Height="40" FontSize="14"/>

                    <TextBlock Text="&#xE72E;" Style="{StaticResource IconStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <ToggleButton IsChecked="{Binding IsNewPasswordVisible, Mode=TwoWay}"
                                  Width="35" Height="35" HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="0,0,5,0" Background="Transparent" BorderThickness="0">
                        <ToggleButton.Content>
                            <Image Width="20" Height="20" Stretch="Uniform"
                                   Source="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource EyeIconConverter}}"/>
                        </ToggleButton.Content>
                    </ToggleButton>
                </Grid>

                <Label Content="{x:Static language:Lang.GlobalLabelConfirmPassword}" Style="{StaticResource LabelStyle}" Foreground="White"/>
                <Grid Margin="0,0,0,15">
                    <PasswordBox x:Name="ConfirmNewPasswordBox"
                                 PasswordChanged="ConfirmNewPasswordBox_PasswordChanged"
                                 Visibility="{Binding IsConfirmNewPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                 Padding="35,0,40,0" VerticalContentAlignment="Center" Height="40" FontSize="14"/>

                    <TextBox Text="{Binding ConfirmNewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsConfirmNewPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                             Padding="35,0,40,0" VerticalContentAlignment="Center" Height="40" FontSize="14"/>

                    <TextBlock Text="&#xE72E;" Style="{StaticResource IconStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <ToggleButton IsChecked="{Binding IsConfirmNewPasswordVisible, Mode=TwoWay}"
                                  Width="35" Height="35" HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="0,0,5,0" Background="Transparent" BorderThickness="0">
                        <ToggleButton.Content>
                            <Image Width="20" Height="20" Stretch="Uniform"
                                   Source="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource EyeIconConverter}}"/>
                        </ToggleButton.Content>
                    </ToggleButton>
                </Grid>

                <Button Content="{x:Static language:Lang.RecoverPasswordButtonConfirm}" Command="{Binding FinishCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Center" Margin="0,20,0,0" Width="180" Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>