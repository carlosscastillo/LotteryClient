<Window x:Class="Lottery.View.CustomizeProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        mc:Ignorable="d"
        Title="Editar perfil"
        WindowStartupLocation="CenterScreen"
        Width="900"
        Height="600"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Grid>
        <!-- Fondo -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Botón cerrar -->
        <!--<Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                Click="CloseButton_Click"/>-->

        <!-- Contenedor principal -->
        <Border BorderBrush="#55FFFFFF" BorderThickness="1" Background="#AA000000" CornerRadius="12" Padding="30" MaxWidth="800" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Avatar en la esquina superior izquierda -->
                <Border Grid.Column="0" Width="120" Height="120" CornerRadius="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,20,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- Campos y botones -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <!-- TÍTULO -->
                    <TextBlock Text="{x:Static language:Lang.UserProfileUpdateTitle}" Style="{StaticResource TitleTextStyle}" Foreground="White" Margin="0,0,0,5"/>
                    <TextBlock Text="{x:Static language:Lang.UserProfileUpdateSubtitle}" Style="{StaticResource SubtitleTextStyle}" Foreground="#DDDDDD" Margin="0,0,0,15"/>

                    <!-- Campos editables -->
                    <StackPanel Width="400">
                        <Label Content="{x:Static language:Lang.GlobalLabelName}" Style="{StaticResource LabelStyle}" Foreground="White" Target="{Binding ElementName=NameTextBox}"/>
                        <TextBox x:Name="NameTextBox" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Label Content="{x:Static language:Lang.GlobalLabelPaternalLastName}" Style="{StaticResource LabelStyle}" Foreground="White" Target="{Binding ElementName=PaternalLastNameTextBox}"/>
                        <TextBox x:Name="PaternalLastNameTextBox" Text="{Binding PaternalLastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Label Content="{x:Static language:Lang.GlobalLabelMaternalLastName}" Style="{StaticResource LabelStyle}" Foreground="White" Target="{Binding ElementName=MaternalLastNameTextBox}"/>
                        <TextBox x:Name="MaternalLastNameTextBox" Text="{Binding MaternalLastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Label Content="{x:Static language:Lang.GlobalLabelNickname}" Style="{StaticResource LabelStyle}" Foreground="White" Target="{Binding ElementName=NicknameTextBox}"/>
                        <TextBox x:Name="NicknameTextBox" Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Label Content="{x:Static language:Lang.GlobalLabelEmail}" Style="{StaticResource LabelStyle}" Foreground="White" Target="{Binding ElementName=EmailTextBox}"/>
                        <TextBox x:Name="EmailTextBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>
                    </StackPanel>

                    <!-- Botones -->
                    <Button Content="{x:Static language:Lang.GlobalButtonSaveChanges}"
                            Command="{Binding UpdateProfileCommand}"
                            Margin="0,0,0,10"
                            Padding="12"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            MinWidth="250">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="{x:Static language:Lang.GlobalButtonBack}"
                            Command="{Binding GoBackCommand}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            HorizontalAlignment="Left"
                            Foreground="#BBBBBB"
                            Margin="0,0,0,0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
