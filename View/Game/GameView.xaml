<Window x:Class="Lottery.View.Game.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=False}"
        Title="Partida en curso"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">

    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <!-- Contenedor principal -->
    <Grid Margin="30">
        <!-- CORRECCIÓN: declarar RowDefinitions como elementos hijos -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nombres de jugadores -->
        <Border Grid.Row="0" Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,20">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Players}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#33FFFFFF" CornerRadius="5" Padding="10" Margin="5">
                                <TextBlock Text="{Binding Nickname}" FontSize="16" FontWeight="Bold"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Zona de juego (fila central) -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- declarar ColumnDefinitions también como elementos hijos -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Carta del jugador -->
            <Border Grid.Column="0" Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="12" Padding="20"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Margin="0,0,20,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Tu Carta" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
                    <Image Source="{Binding PlayerCardImage}" Width="380" Height="580" Stretch="UniformToFill" />
                </StackPanel>
            </Border>

            <!-- Botón central -->
            <Button Grid.Column="1" Content="¡Lotería!" FontSize="22" FontWeight="Bold" Padding="25,10"
                    Command="{Binding DeclareLoteriaCommand}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Carta que va saliendo -->
            <Border Grid.Column="2" Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="12" Padding="20"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Margin="20,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Carta Actual" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
                    <Image Source="{Binding CurrentCardImage}" Width="320" Height="480" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding CurrentCardName}" FontSize="18" FontWeight="Bold" Margin="0,15,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Controles inferiores -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Mensajes de estado -->
            <TextBlock Grid.Column="0" Text="{Binding GameStatusMessage}" FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <!-- Botón salir -->
            <Button Grid.Column="1" Content="Salir de la Partida"
                    Command="{Binding LeaveGameCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Padding="15,8" Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</Window>