<Window x:Class="Lottery.View.GuestRegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.View"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="GuestRegisterView" Height="370" Width="400"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    
    <Border BorderBrush="#DDDDDD" BorderThickness="1" Background="White" CornerRadius="12" Padding="40" MaxWidth="420" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="{x:Static language:Lang.GuestSignUpLabelTitle}" Style="{StaticResource TitleTextStyle}"/>

            <TextBlock Text="{x:Static language:Lang.GuestSignUpLabelNickname}" Style="{StaticResource SubtitleTextStyle}"/>

            <Label Content="{x:Static language:Lang.GlobalLabelNickname}" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=GuestNicknameTextBox}"/>
            <Grid>
                <TextBox x:Name="GuestNicknameTextBox" Text="xxCarCasXx" />
                <TextBlock Text="&#xE77B;" Style="{StaticResource IconStyle}"/>
            </Grid>

            <Button x:Name="StartGuestButton" Click="StartGuestButton_Click" Content="{x:Static language:Lang.GlobalButtonStart}" Margin="0,30,0,0" Padding="12" FontSize="16" FontWeight="Bold" Foreground="White" Background="Black" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>
