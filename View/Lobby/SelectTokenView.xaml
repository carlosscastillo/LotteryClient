<Window x:Class="Lottery.View.Lobby.SelectTokenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Lottery.Converters"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        Title="SelectToken" 
        Height="500" Width="800" 
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:TokenToImageConverter x:Key="TokenToImageConverter"/>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#55FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="/Images/backgroundRickAndMorty.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Border Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="12" Padding="20">
            <Grid>
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-10,-10,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="CloseButton_Click" Cursor="Hand" Panel.ZIndex="1"/>

                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{x:Static language:Lang.SelectTokenLabelTitle}" Foreground="{StaticResource TextBrush}" 
                               FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableTokens}" 
                             SelectedItem="{Binding SelectedTokenItem}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             VerticalContentAlignment="Center">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="15,10" Padding="15" CornerRadius="8" BorderThickness="2" Width="140" Height="180">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#CCFFFFFF"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#FFC107"/>
                                                    <Setter Property="BorderThickness" Value="4"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#FFC107" BlurRadius="20" ShadowDepth="0"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" 
                                                   Foreground="#333" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10"/>

                                        <Image Source="{Binding Key, Converter={StaticResource TokenToImageConverter}}" 
                                               Width="80" Height="80" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" Content="{x:Static language:Lang.SelectTokenButtonConfirmMarkers}" Command="{Binding ConfirmSelectionCommand}"
                            Width="300" Height="50" FontSize="22" Margin="0,20,0,0"
                            Style="{StaticResource PrimaryButton}" Cursor="Hand"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>