<Page x:Class="Lottery.View.RecoverPasswordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lottery.View"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:Lottery.Properties.Langs"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F0F0F0"
      Title="RecoverPasswordView">

    <Page.Resources>
        <Style x:Key="StyledTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0,40,0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                      Margin="0" 
                                      Padding="{TemplateBinding Padding}" 
                                      Background="Transparent"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">

            <TextBlock FontSize="28" FontWeight="Bold" TextAlignment="Center" Margin="0 -110 0 40">
            <Run Text="Recuperar"/>
            <Run Text=" contraseña"/>
            </TextBlock>

            <!-- Paso 1: Correo -->
            <StackPanel x:Name="EmailPanel" HorizontalAlignment="Center" Width="440" Visibility="Visible">
                <TextBlock FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20">
                <Run Text="Ingresa tus datos para continuar"/>
                </TextBlock>

                <Label Content="Correo electrónico" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbEmail" Style="{StaticResource StyledTextBox}"/>

                <TextBlock Text="Al presionar “Recuperar contraseña”, se enviará un código de verificación a la dirección de correo electrónico proporcionada."
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,8,0,30"/>

                <Button Content="Recuperar contraseña"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Click="NextFromEmail_Click"/>
            </StackPanel>

            <StackPanel x:Name="CodePanel" HorizontalAlignment="Center" Width="440" Visibility="Collapsed">
                <TextBlock FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20">
                <Run Text="Se ha enviado un código por correo a"/>
                </TextBlock>

                <Label Content="Código de verificación" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbCode" Style="{StaticResource StyledTextBox}"/>

                <Button Content="Verificar código"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Click="NextFromCode_Click"/>
            </StackPanel>

            <StackPanel x:Name="NewPasswordPanel" HorizontalAlignment="Center" Width="440" Visibility="Collapsed">
                <TextBlock FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 20">
                <Run Text="Ingresa tu nueva contraseña"/>
                </TextBlock>

                <Label Content="Nueva contraseña" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbNewPassword" Style="{StaticResource StyledTextBox}"/>

                <Label Content="Repite contraseña" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbRepeatPassword" Style="{StaticResource StyledTextBox}"/>

                <Button Content="Confirmar"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Click="Finish_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
