<Window x:Class="Lottery.View.Game.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lottery.ViewModel.Game"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:GameViewModel, IsDesignTimeCreatable=False}"
        Title="Partida en curso"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized">

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/background2.jpg"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Width="390">

            <ItemsControl>
                <ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Int32}">
                        <sys:Int32>1</sys:Int32>
                        <sys:Int32>2</sys:Int32>
                        <sys:Int32>3</sys:Int32>
                    </x:Array>
                </ItemsControl.ItemsSource>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5,0,1"
                                    Orientation="Horizontal">
                            <Border Width="114" Height="180"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    Background="Transparent"
                                    Margin="0,0,10,0">
                                <Image Source="pack://application:,,,/Images/tabla.jpg"
                                       Stretch="Uniform"/>
                            </Border>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Jugador"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="16"/>
                                <TextBlock Text="Fichas restantes: 5"
                                           Foreground="#DDDDDD"
                                           FontSize="13"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border BorderBrush="Transparent"
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="0,40,0,0"                    
                    Padding="10"
                    HorizontalAlignment="Center">
                <Image Source="{Binding TokenPileImagePath}"
                       Width="280"
                       Height="180"
                       Stretch="Uniform"/>
            </Border>
        </StackPanel>
        
        <Grid Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <Border Background="#AAFFFFFF"
                    CornerRadius="24"
                    BorderBrush="White"
                    BorderThickness="0"
                    Width="500"
                    Height="770"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="15">
                <ItemsControl ItemsSource="{Binding BoardCells}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="4" Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">

                                <Image Source="{Binding ImagePath}" 
                                       Stretch="Fill"/>

                                <Image Source="{Binding DataContext.TokenImagePath, RelativeSource={RelativeSource AncestorType=Window}}"
                                       Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Stretch="Uniform"
                                       Margin="5">
                                    <Image.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.6"/>
                                    </Image.Effect>
                                </Image>

                                <ToggleButton IsChecked="{Binding IsSelected}"
                                              Opacity="0" 
                                              Cursor="Hand"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>

        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,60,40,0">
            <Border Background="#AAFFFFFF"
                    CornerRadius="14"
                    Padding="12"
                    BorderBrush="White"
                    BorderThickness="0"
                    Width="260">
                <StackPanel>

                    <Image Source="{Binding CurrentCardImage}"
                           Width="260"
                           Height="360"
                           Stretch="Uniform"/>

                    <TextBlock Text="{Binding CurrentCardName}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,10,0,5"/>

                </StackPanel>
            </Border>

            <Button Content="¡Lotería!"
                Style="{StaticResource PrimaryButtonStyle2}"
                Command="{Binding DeclareLoteriaCommand}"
                Visibility="{Binding AllCellsSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                Margin="0,25,0,0"/>

        </StackPanel>

        <Button Content="⏸ Pausa"
                Command="{Binding PauseGameCommand}"
                Width="120"
                Height="45"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Background="#66000000"
                BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,40,0"
                Grid.ColumnSpan="3"/>

        <Grid Grid.ColumnSpan="3"
              VerticalAlignment="Bottom"
              Margin="30,0,30,20">
            <TextBlock Text="{Binding GameStatusMessage}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
        </Grid>

        <Border Grid.Column="0" Grid.ColumnSpan="3"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="#CC000000" 
                CornerRadius="20"
                Padding="40,20"
                IsHitTestVisible="False"
                Visibility="{Binding IsStartMessageVisible, Converter={StaticResource BoolToVisibilityConverter}}">

            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <TextBlock Text="{Binding StartMessageText}"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="#FFC107" 
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="4"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
        
    </Grid>
</Window>