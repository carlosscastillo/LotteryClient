<Page x:Class="Lottery.View.ChangePasswordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lottery.View"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:Lottery.Properties.Langs"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F0F0F0"
      Title="ChangePasswordView">

    <Page.Resources>
        <Style x:Key="InputFieldStyle" TargetType="{x:Type Control}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="35,8,8,8"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyledPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0,40,0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="8" 
                    SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                              Margin="0" 
                              Padding="{TemplateBinding Padding}" 
                              Background="Transparent"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StyledTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0,40,0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                              Margin="0" 
                              Padding="{TemplateBinding Padding}" 
                              Background="Transparent"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 0">

            <TextBlock Text="{x:Static language:Lang.GlobalTagPassword}"
               FontSize="28"
               FontWeight="Bold"                   
               TextAlignment="Center"
               Margin="0 0 0 60"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

                <TextBlock
                       FontSize="16"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0 0 0 20"><Run 
                       Text="{x:Static language:Lang.GlobalLabelDetailsToContinue}"/>
                </TextBlock>

                <Label Content="{x:Static language:Lang.ChangePasswordLabelCurrentPassword}" Style="{StaticResource LabelStyle}"/>
                <Grid Width="250" Margin="0,0,0,15">
                    <PasswordBox x:Name="pbPassword" Style="{StaticResource StyledPasswordBox}" PasswordChar="●"/>

                    <TextBox x:Name="tbPassword" Style="{StaticResource StyledTextBox}" Visibility="Collapsed"/>

                    <Button Content="👁"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Click="TogglePasswordVisibility_Click"/>
                </Grid>

                <Label Content="{x:Static language:Lang.GlobalLabelNewPassword}" Style="{StaticResource LabelStyle}"/>
                <Grid Width="250" Margin="0,0,0,15">
                    <PasswordBox x:Name="Password1" Style="{StaticResource StyledPasswordBox}" PasswordChar="●"/>

                    <TextBox x:Name="Password2" Style="{StaticResource StyledTextBox}" Visibility="Collapsed"/>

                    <Button Content="👁"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Click="TogglePasswordVisibility_Click"/>
                </Grid>

                <Label Content="{x:Static language:Lang.GlobalLabelConfirmPassword}" Style="{StaticResource LabelStyle}"/>
                <Grid Width="250" Margin="0,0,0,15">
                    <PasswordBox x:Name="Password3" Style="{StaticResource StyledPasswordBox}" PasswordChar="●"/>

                    <TextBox x:Name="Password4" Style="{StaticResource StyledTextBox}" Visibility="Collapsed"/>

                    <Button Content="👁"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"
                        Click="TogglePasswordVisibility_Click"/>
                </Grid>

                <Button Content="{x:Static language:Lang.ChangePasswordButtonCreateNewPassword}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
