<Window x:Class="Lottery.View.User.GuestLoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        mc:Ignorable="d"
        Title="Guest Login"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                Click="CloseButton_Click"/>

        <Border BorderBrush="#55FFFFFF"
                BorderThickness="1"
                Background="#AA000000"
                CornerRadius="12"
                Padding="40"
                MaxWidth="420"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1"
                                  Color="Black"
                                  Opacity="0.1"
                                  BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="{x:Static language:Lang.GuestSignUpLabelTitle}"
                           Style="{StaticResource TitleTextStyle}"
                           Foreground="White"/>

                <TextBlock Text="{x:Static language:Lang.GuestSignUpLabelNickname}"
                           Style="{StaticResource SubtitleTextStyle}"
                           Foreground="#DDDDDD"/>

                <Label Content="{x:Static language:Lang.GlobalLabelNickname}"
                       Style="{StaticResource LabelStyle}"
                       Target="{Binding ElementName=GuestNicknameTextBox}"
                       Foreground="White"/>

                <Grid>
                    <TextBox x:Name="GuestNicknameTextBox"
                             Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="20"/>
                    <TextBlock Text="&#xE77B;" Style="{StaticResource IconStyle}"/>
                </Grid>

                <Button x:Name="StartGuestButton"
                        Command="{Binding LoginGuestCommand}"
                        Content="{x:Static language:Lang.GlobalButtonStart}"
                        Margin="0,30,0,0"
                        Padding="12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Black"
                        BorderThickness="0"
                        Cursor="Hand"
                        MinWidth="250">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>

</Window>
