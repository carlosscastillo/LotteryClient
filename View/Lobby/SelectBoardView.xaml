<Window x:Class="Lottery.View.Lobby.SelectBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Lottery.Converters"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:Lottery.Properties.Langs"
        
        Title="SelectBoardView"
        Height="700" Width="1100" 
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:IdToImageConverter x:Key="IdToImageConverter"/>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}"/>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#55FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="/Images/backgroundRickAndMorty.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Border Background="{StaticResource OverlayBackgroundBrush}" CornerRadius="12" Padding="20">
            <Grid>
                <Button Content="X"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="CloseButton_Click"
                        Panel.ZIndex="1"
                        Cursor="Hand"/>

                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{x:Static language:Lang.SelectBoardLabelTitle}" 
                               Foreground="{StaticResource TextBrush}" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding AvailableBoards}" 
                             SelectedItem="{Binding SelectedBoard}"
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             VerticalContentAlignment="Center">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="15,10" 
                                        Padding="10" 
                                        CornerRadius="8"
                                        BorderThickness="2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#CCFFFFFF"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#FFC107"/>
                                                    <Setter Property="BorderThickness" Value="4"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#FFC107" BlurRadius="20" ShadowDepth="0"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <TextBlock Text="{Binding BoardName}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#333"
                                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                        <ItemsControl ItemsSource="{Binding CardIds}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="4" Columns="4" Width="280" Height="400"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding Converter={StaticResource IdToImageConverter}}" 
                                                           Margin="1" Stretch="Fill"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" 
                            Content="{x:Static language:Lang.SelectBoardConfirmSelection}" 
                            Command="{Binding ConfirmSelectionCommand}"
                            Width="300" Height="50" 
                            FontSize="22" Margin="0,20,0,0"
                            Style="{StaticResource PrimaryButton}"
                            Cursor="Hand"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>