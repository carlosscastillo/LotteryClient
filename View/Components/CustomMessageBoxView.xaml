<Window x:Class="Lottery.View.Components.CustomMessageBoxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lang="clr-namespace:Lottery.Properties.Langs"
        Title="Message"
        Width="450"
        SizeToContent="Height"
        MinHeight="200"
        MaxHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#55FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="/Images/backgroundRickAndMorty.png"
                        Stretch="UniformToFill"/>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="20"
                              ShadowDepth="5"
                              Opacity="0.5"/>
        </Border.Effect>

        <Border Background="{StaticResource OverlayBackgroundBrush}"
                CornerRadius="12"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Botón cerrar -->
                <Button Content="X"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="BtnCancel_Click"
                        Panel.ZIndex="1"
                        Cursor="Hand"/>

                <!-- Título -->
                <TextBlock x:Name="TxtTitle"
                           Grid.Row="0"
                           Text="Title"
                           FontWeight="Bold"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Contenido -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:Name="ImgIcon"
                           Grid.Column="0"
                           Width="48"
                           Height="48"
                           Margin="0,0,20,0"
                           VerticalAlignment="Top"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <ScrollViewer Grid.Column="1"
                        VerticalScrollBarVisibility="Hidden"
                        HorizontalScrollBarVisibility="Disabled"
                        MaxHeight="300"
                        PanningMode="VerticalOnly">

                        <TextBlock x:Name="TxtMessage"
                                   Text="Message content goes here..."
                                   TextWrapping="Wrap"
                                   TextTrimming="None"
                                   FontSize="16"
                                   MaxWidth="320"
                                   TextAlignment="Left"/>
                    </ScrollViewer>
                </Grid>

                <!-- Botones -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                    <Button x:Name="BtnYes"
                            Content="{x:Static lang:Lang.GlobalTagYes}"
                            Click="BtnYes_Click"
                            Visibility="Collapsed"/>

                    <Button x:Name="BtnNo"
                            Content="{x:Static lang:Lang.GlobalTagNo}"
                            Click="BtnNo_Click"
                            Visibility="Collapsed"
                            Background="#AAFF4444"/>

                    <Button x:Name="BtnOk"
                            Content="{x:Static lang:Lang.GlobalButtonOK}"
                            Click="BtnOk_Click"
                            Visibility="Collapsed"/>

                    <Button x:Name="BtnCancel"
                            Content="{x:Static lang:Lang.GlobalButtonCancel}"
                            Click="BtnCancel_Click"
                            Visibility="Collapsed"
                            Background="#AAFF4444"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>